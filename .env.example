# =====================================================================
# LabFlow 環境配置範例
# =====================================================================
# 說明：複製此文件為 .env 並根據實際情況修改

# =====================================================================
# 應用程式設定
# =====================================================================

# 應用程式環境 (development, staging, production)
APP_ENV=development

# 調試模式 (True/False)
DEBUG=False

# =====================================================================
# 資料庫配置
# =====================================================================

# 資料庫 URL
# 本地開發: sqlite:///./labflow.db
# PostgreSQL: postgresql://user:password@localhost:5432/labflow
# MySQL: mysql+pymysql://user:password@localhost/labflow
DATABASE_URL=sqlite:///./labflow.db

# =====================================================================
# 檔案儲存配置
# =====================================================================

# 檔案儲存路徑
STORAGE_PATH=data/managed

# 最大上傳大小（位元組），預設 50 MiB
MAX_UPLOAD_SIZE=52428800

# =====================================================================
# 安全配置
# =====================================================================

# JWT 密鑰（用於簽署令牌）
# 生成方式: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-me-in-production-please

# JWT 令牌過期時間（分鐘）
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 刷新令牌過期時間（天）
REFRESH_TOKEN_EXPIRE_DAYS=7

# =====================================================================
# Redis 快取配置
# =====================================================================

# Redis 連線字串
# 本地: redis://localhost:6379/0
# 遠端: redis://:password@host:port/0
REDIS_URL=redis://localhost:6379/0

# 快取 TTL（秒），預設 3600 (1 小時)
CACHE_TTL=3600

# =====================================================================
# Celery (Task Queue) Config
# =====================================================================
# Broker a message broker is a computer program that translates a message 
# from the formal messaging protocol of the sender to the formal messaging 
# protocol of the receiver.
CELERY_BROKER_URL=redis://localhost:6379/1

# The result backend is used to store the results of the tasks.
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =====================================================================
# 日誌配置
# =====================================================================

# 日誌級別 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 日誌格式 (text, json)
LOG_FORMAT=text

# 日誌檔案路徑
LOG_FILE=logs/labflow.log

# 日誌檔案最大大小（位元組），預設 10 MB
LOG_MAX_BYTES=10485760

# 保留的備份日誌數量
LOG_BACKUP_COUNT=5

# =====================================================================
# API 配置
# =====================================================================

# API 標題
API_TITLE=LabFlow API

# API 描述
API_DESCRIPTION=實驗室研究資料管理系統

# API 版本
API_VERSION=0.3.0-alpha

# =====================================================================
# 初始化配置
# =====================================================================

# 管理員密碼（首次初始化時使用）
ADMIN_PASSWORD=admin123

# 強制初始化管理員 (true/false)
FORCE_INIT_ADMIN=false

# 強制初始化標籤 (true/false)
FORCE_INIT_TAGS=false

# =====================================================================
# Streamlit UI 配置
# =====================================================================

# Streamlit 伺服器埠
STREAMLIT_SERVER_PORT=8501

# Streamlit 日誌級別
STREAMLIT_LOGGER_LEVEL=info

# =====================================================================
# 功能開關
# =====================================================================

# 離線模式 (true/false) - 只跑在本地、不做雲端同步
OFFLINE_MODE=true

# 啟用批量操作 (true/false)
ENABLE_BATCH_OPERATIONS=true

# 啟用快取 (true/false)
ENABLE_CACHE=true

# 啟用審計日誌 (true/false)
ENABLE_AUDIT_LOG=true
